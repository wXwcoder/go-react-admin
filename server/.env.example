# Go-React-Admin 环境变量配置
# 复制此文件为 .env 并根据需要修改

# === 服务器配置 ===
SERVER_PORT=8080
GIN_MODE=debug

# === 数据库配置 ===
DB_HOST=localhost
DB_PORT=3306
DB_USER=admin
DB_PASSWORD=admin123
DB_NAME=go_react_admin
DB_CHARSET=utf8mb4
DB_PARSE_TIME=true
DB_LOC=Asia/Shanghai

# === Redis配置 ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === JWT配置 ===
JWT_SECRET=go-react-admin-secret-key-change-this-in-production
JWT_EXPIRE=24

# === 日志配置 ===
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=console

# === 多租户配置 ===
MULTI_TENANT_ENABLED=true
MULTI_TENANT_MODE=shared_schema

# === 系统配置 ===
SYSTEM_NAME=go-react-admin
SYSTEM_VERSION=1.0.0
SYSTEM_THEME=light